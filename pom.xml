<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.exasol</groupId>
    <artifactId>cloudwatch-dashboard-examples</artifactId>
    <version>0.2.2</version>
    <name>cloudwatch-dashboard-examples</name>
    <description>Example dashboards for the Exasol database's CloudWatch metrics</description>
    <url>https://github.com/exasol/cloudwatch-dashboard-examples/</url>
    <properties>
        <cdk.version>1.161.0</cdk.version>
    </properties>
    <dependencies>
        <!-- AWS Cloud Development Kit -->
        <dependency>
            <groupId>software.amazon.awscdk</groupId>
            <artifactId>core</artifactId>
            <version>${cdk.version}</version>
        </dependency>
        <dependency>
            <groupId>software.amazon.awscdk</groupId>
            <artifactId>cloudwatch</artifactId>
            <version>${cdk.version}</version>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>5.8.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.0.0</version>
                <configuration>
                    <mainClass>com.exasol.cloudwatchexampledashboard.CloudwatchDashboardExamplesApp</mainClass>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.exasol</groupId>
                <artifactId>project-keeper-maven-plugin</artifactId>
                <version>2.4.6</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.sonatype.ossindex.maven</groupId>
                <artifactId>ossindex-maven-plugin</artifactId>
                <configuration>
                    <excludeVulnerabilityIds>
                        <!-- com.fasterxml.jackson.core:jackson-databind:2.11.4 is a transitive dependency of software.amazon.awscdk:core:1.161.0.
                             Upgrading to a later version breaks at runtime. -->
                        <!-- We don't accept JSON input from other sources, so we are not affected by https://ossindex.sonatype.org/vulnerability/CVE-2020-36518 -->
                        <exclude>CVE-2020-36518</exclude>
                        <!-- We don't use JDK serialization, so we are not affected by https://ossindex.sonatype.org/vulnerability/sonatype-2021-4682 -->
                        <exclude>sonatype-2021-4682</exclude>
                    </excludeVulnerabilityIds>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <parent>
        <artifactId>cloudwatch-dashboard-examples-generated-parent</artifactId>
        <groupId>com.exasol</groupId>
        <version>0.2.2</version>
        <relativePath>pk_generated_parent.pom</relativePath>
    </parent>
</project>